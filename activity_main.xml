<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#515151">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:text="Scan Your Barcode"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="410dp"
        android:src="@drawable/left_bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/left_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/right_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="410dp"
        android:src="@drawable/right_bottom" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="115dp"
        android:width="200dp"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="60dp"
        android:text="Tap to scan" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="780dp"
        android:src="@drawable/middle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="680dp"
        android:backgroundTintMode="screen"
        android:src="@drawable/scan" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/line_indicator" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="790dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="790dp"
        android:layout_marginBottom="780dp"
        android:src="@drawable/window" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="780dp"
        android:src="@drawable/back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="780dp"
        android:src="@drawable/window" />

</RelativeLayout>
